<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timePicker1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:orientation="horizontal"
    android:weightSum="6"
    android:paddingTop="10dp"
    android:paddingBottom="40dp"
    android:background="#000000"
     >

    <com.incito.view.wheelview.WheelView
        android:id="@+id/wv_date_picker_year"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent" />

    <com.incito.view.wheelview.WheelView
        android:id="@+id/wv_date_picker_month"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

    <com.incito.view.wheelview.WheelView
        android:id="@+id/wv_date_picker_day"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

    <com.incito.view.wheelview.WheelView
        android:id="@+id/wv_date_picker_hour"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

    <com.incito.view.wheelview.WheelView
        android:id="@+id/wv_date_picker_mins"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

</LinearLayout>
